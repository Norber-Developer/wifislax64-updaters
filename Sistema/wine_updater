#!/bin/sh

# Script by www.seguridadwireless.net

SCRIPT_VERSION=20161101

#################################################
## Funciones comunes. Su nombre empieza por f_ ##
#################################################
f_variables(){
	. /opt/wifislax-updaters/Funciones/funciones_updater
}

############################################################
## Funciones propias del script. Su nombre empieza por F_ ##
############################################################
# Definicion de variables
F_variables(){
	PRGNAM=wine
	echo -ne "\033]2;${PRGNAM}_updater\007"
	WEB=https://sourceforge.net/projects/wine/files/Slackware%20Packages/
	VERSION=$(curl -s $WEB|grep -m1 "class=\"folder"|awk '{print $2}'|cut -d "\"" -f 2)
	GECKO_WEB=http://dl.winehq.org/wine/wine-gecko
	GECKO_VERSION=$(curl -s $GECKO_WEB/|egrep -o ">[0-9].[0-9]{1,2}/"|tr -d '>/'|tail -1)
	MONO_WEB=https://dl.winehq.org/wine/wine-mono
	MONO_VERSION=$(curl -s $MONO_WEB/|egrep -o ">[0-9].[0-9]{1,2}.[0-9]{1,2}/"|tr -d '>/'|tail -1)
}

# Comprobar dependencias ( si hay mas de una se separan por un espacio )
F_dependencias(){
DEPENDENCIAS="fontforge webcore-fonts cabextract"
f_dependencias
}

# Si el paquete no existe se descargara de internet
F_download(){
	DESCARGAR="wget -N -L -c -q --show-progress"
	PKGVER=`curl -s ${WEB}$VERSION/$ARCH/|grep -o [0-9]sg|tail -1`
	if [ ! -f $PRGNAM-$VERSION-$ARCH-$PKGVER.txz ]; then
	echo ""
	echo "$CYAN"Descargando sources de $PRGNAM-$VERSION"$CIERRE"
	sleep 1
	$DESCARGAR ${WEB}$VERSION/$ARCH/$PRGNAM-$VERSION-$ARCH-$PKGVER.txz
	fi
# Si gecko no existe se descargara de internet
	if [ ! -f ${PRGNAM}_gecko-$GECKO_VERSIO-$ARCH.msi ]; then
	echo ""
	echo "$CYAN"Descargando plugin ${PRGNAM}_gecko-$GECKO_VERSION-$ARCH.msi"$CIERRE"
	sleep 1
	$DESCARGAR $GECKO_WEB/$GECKO_VERSION/${PRGNAM}_gecko-$GECKO_VERSION-$ARCH.msi
	fi
# Si mono no existe se descargara de internet
	if [ ! -f ${PRGNAM}-mono-$MONO_VERSION.msi ]; then
	echo ""
	echo "$CYAN"Descargando plugin ${PRGNAM}-mono-$MONO_VERSION.msi"$CIERRE"
	sleep 1
	$DESCARGAR $MONO_WEB/$MONO_VERSION/${PRGNAM}-mono-$MONO_VERSION.msi
fi
}

# Tareas de conversion de formato
F_compilar(){
echo ""
echo "$VERDE"
txz2dir $PRGNAM-$VERSION-$ARCH-${PKGVER}.txz $PKG
mkdir $PKG/usr/share/wine/gecko $PKG/usr/share/wine/mono
mv ${PRGNAM}_gecko-$GECKO_VERSION-$ARCH.msi $PKG/usr/share/wine/gecko
chmod 777 $PKG/usr/share/wine/gecko/${PRGNAM}_gecko-$GECKO_VERSION-$ARCH.msi
mv ${PRGNAM}-mono-$MONO_VERSION.msi $PKG/usr/share/wine/mono
chmod 777 $PKG/usr/share/wine/mono/${PRGNAM}-mono-$MONO_VERSION.msi
rm $PKG/var/log/packages/wine*
# El desktop winecfg viene mal ..se repara
rm $PKG/usr/share/applications/winecfg.desktop
echo "[Desktop Entry]
[Desktop Entry]
Categories=Application;Settings
Comment=Settings Tool for WINE
Encoding=UTF-8
Exec=winecfg
Icon=winecfg
Name=Wine Configuration
Terminal=false
Type=Application
" > $PKG/usr/share/applications/winecfg.desktop
}

###################################
## BLOQUE PRINCIPAL DE EJECUCION ##
###################################
# Si se cierra el script inesperadamente, ejecutar la funcion de limpieza
trap f_exitmode SIGHUP SIGINT

#Inicializamos las variables globales
f_variables
#Comprobamos conexion a Internet
f_comprobarConexion
#Asignamos o detectamos arquitectura
f_arquitectura
#Inicializamos las variables del script
F_variables
#Creamos directorio de trabajo
f_directorioTemporal
#Mostramos el mensaje de presentacion
f_presentacion
#Comprobamos updates del script
f_comprobarUpdates
#Comprobamos version instalada del script
f_versionInstalada
# Comprobar dependencias ( si hay mas de una se separan por un espacio )
F_dependencias
#Si no existe el fichero se descargara
F_download
#Descomprimir fichero descargado y compilamos
F_compilar
#Creamos xzm , instalamos y salimos
f_tareasFinales