#!/bin/sh

# Script by www.seguridadwireless.net

SCRIPT_VERSION=20161112
CATEGORIA="Reproductores multimedia"

############################################################
## Funciones comunes. Su nombre empieza por f_ ##
############################################################
f_variables(){
	. /opt/wifislax-updaters/Funciones/funciones_updater
}

############################################################
## Funciones propias del script. Su nombre empieza por F_ ##
############################################################
# Definicion de variables
F_variables() {
	PRGNAM=clementine
	echo -ne "\033]2;${PRGNAM}_updater\007"
	WEB=https://www.clementine-player.org/es/downloads
	VERSION=`curl -s $WEB|grep Clementine| grep .tar.gz|head -1|cut -d "/" -f 7|cut -d t -f-1|sed 's/.$//g'`
	EXTENSION=tar.gz
	SOURCES=$VERSION.$EXTENSION
	SRCNAM=Clementine-$VERSION
	DOWNLOAD=https://github.com/clementine-player/Clementine/archive/$SOURCES
}

# Comprobar dependencias
F_dependencias(){
DEPENDENCIAS="x264 twolame libmpeg2 libdvdcss lame opencore-amr amrnb amrwb libass libcdaudio celt libdc1394 libdca faac faad2 flite fluidsynth gsm libkate liblrdf libmodplug libmimic libmusicbrainz libofa libdv schroedinger libquicktime libwebp lv2 musepack-tools OpenAL opencv soundtouch swfdec xvidcore rtmpdump schroedinger TiMidity++ xvidcore ffmpeg chromaprint cryptopp libechonest pytz six python-dateutil python-gflags protobuf gst-plugins-bad gst-plugins-ugly gst-libav sparsehash"
f_dependencias
}

